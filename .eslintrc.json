{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "camelcase": "off",
        "prettier/prettier": "error",        
        "import/no-unresolved": "error",
        "no-use-before-define": "off",
        "@typescript-eslint/naming-convention":[
            "error",
            {
                "selector": "interface",
                "format": ["PascalCase"],
                "custom": {
                    "regex": "ÃŽ[A-Z]",
                    "match": true
                }
            }
        ],
        "@typescript-eslint/no-use-before-define": [
	        "error"
    ],
    "import/extensions": [
        "error",
        "ignorePackages",
        {
          "ts": "never"
        }
      ]
    },
    "settings": {
        "import/resolver": {
          "typescript": {}
        }
      }
}
